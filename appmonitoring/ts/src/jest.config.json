{
  "verbose": true,
  "transform": {
    ".*": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "testEnvironment": "node",
  "testRegex": "/tests/.*\\.spec\\.(ts|tsx)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}